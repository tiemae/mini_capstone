<h1> Edit Product</h1>

<form action="/products/<%= @product.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <div>
    Name: <input type="text" name="name" value= "<%= @product.name %>">
  </div>

  <div>
    Price: <input type="number" step="0.01" name="price" value = "<%= @product.price %>">
  </div>

  <div>
    Description: <input type="text" name="description" value = "<%= @product.description %>">
  </div>

  <div>
    In Stock: <input type="checkbox" checked name="in_stock" value = "<%= @product.in_stock %>">
  </div>

  <div>
    Supplier Id: <input type="number" name="supplier_id" value = "<%= @product.supplier_id %>">
  </div>
  <div>
  <input type="submit" value="Update Product">
  </div>
</form>